{
  "name": "Senior Rejuvenator",
  "description": "Uma extens√£o do Chrome que tenta rejuvenescer o Senior.",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": ["https://*.senior.com.br/*"],
      "include_globs": ["*conector?ACAO=RHMONTAMENU&SIS=HR"],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["src/menu-lateral.js"]
    },
    {
      "matches": ["https://*.senior.com.br/*"],
      "include_globs": [
        "*conector?ACAO=EXEACERTO&SIS=HR&STATUS=CARREGARACERTO*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": ["src/horas.js"]
    }
  ]
}
